<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Le Restaurant Du Dev{% endblock %}</title>

        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="1024x1024" href="{{ asset('images/favicon-1024x1024.png') }}">

        <link rel="stylesheet" href="{{ asset('styles/reset.css') }}">

        <link rel="stylesheet" href="{{ asset('styles/root.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/body.css') }}">

        <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/nav.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/main.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/footer.css') }}">

        <link rel="stylesheet" href="{{ asset('styles/section.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/spacing.css') }}">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>

    <body class="reset">
        <header>
            <nav id="nav">
                <a id="nav-brand" href="{{ path('index') }}">Le Restaurant Du Dev</a>

                <button id="nav-hamburger" type="button" data-toggle-expand-id="nav-links">
                    <svg id="nav-hamburger-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                    </svg>
                </button>

                {% set nav_links = {
                    'Accueil': 'index',
                    'Carte': 'menu',
                    'RÃ©servation': 'reservation',
                    'Informations': 'informations',
                    'Jeux': 'games'
                } %}
                <ul id="nav-links">
                    {% set request_route = app.request.attributes.get('_route') %}
                    {% for label, route in nav_links %}
                        <li>
                            <a class="nav-link {{ route == request_route ? 'active' : '' }}"
                               href="{{ path(route) }}">
                                {{ label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </header>

        <main>
            {% block main %}{% endblock %}
        </main>

        <footer>
            <p id="copyright">&copy; 2026 Benjamin Valero</p>
        </footer>

        <script src="{{ asset('js/expand.js') }}"></script>
    </body>

</html>
